<!doctype html>
<html>
	<head>

		<meta charset="utf8" />
		<title> Recetas </title>

		<!-- Importamos el estilo css -->
		<link rel="stylesheet" href="../css/admin.css" /> 

	</head>

	<body>

		<div id="container">

			<% include menu_navAdmin.html %>

			<div id="info">

				<strong>Número de recetas: </strong> <%= recetas %> <br /><br />

				<!-- Mostrar una tabla de recetas, sólo el campo email -->
				<table border="1">

					<tr>
						<td><strong> id </strong></td>
						<td><strong> Nombre </strong></td>
						<td><strong> Ingredientes </strong></td>
					</tr>


					<% for(var i = 0; i<receta.length; i++){ %>
					<tr>
						 <td><%= receta[i]._id %></td>
						 <td><%= receta[i].nombre %></td>
						 <td><%= receta[i].ingredientes %></td>
					<% } %>
					</tr>

				</table>
			</div> <!-- Cierre del div de la info-tabla -->

			<!-- Formulario para borrar recetas-->
			<form action="/eliminarRecetas" method="post">

				<h3> Eliminar recetas </h3>

				<div class="id">
						<label> Introduzca el <strong>id</strong>: </label> <br />
						<input type="text" name="id">
				</div> <!-- Cierre del id-->


				<button type="submit"> Eliminar </button>

			</form> <!-- Cierre del formulario eliminarRecetas -->

		</div> <!-- Cierre del div container -->

	</body>
</html>